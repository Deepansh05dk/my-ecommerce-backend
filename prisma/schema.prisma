model Order {
  id        Int         @id @default(autoincrement())
  // phone     String      @default("")
  // address   String      @default("")
  status    OrderStatus @default(PENDING)
  total     Decimal
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  items     Product[]
}

